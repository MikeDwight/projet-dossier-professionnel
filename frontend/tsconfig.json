{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "src",
    "jest.setup.ts",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx"
  ]
}
