generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  password  String
  firstname String
  lastname  String
  cards     Card[]
}

model Card {
  id       String  @id @default(uuid())
  name     String
  number   Int
  userId   String
  bloc     String
  serie    String
  imageUrl String?
  user     User    @relation(fields: [userId], references: [id])
}
